{
  "imports": {
    "npm:@base44/sdk@0.8.6": "npm:@base44/sdk@0.8.6",
    "npm:@base44/vite-plugin": "npm:@base44/vite-plugin"
  },
  "tasks": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --quiet",
    "test": "vitest"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars", "no-explicit-any"]
    }
  }
}
