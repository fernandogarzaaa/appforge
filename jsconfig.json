{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "checkJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*",
    "functions/**/*",
    "types/**/*",
    "src/vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".venv",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.spec.js",
    "**/__tests__/**",
    "src/test/**",
    "src/tests/**",
    "tests/**"
  ],
  "deno": {
    "enable": true,
    "unstable": true
  }
} 